{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./out",
        "target": "es2017",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["./dist/*"]
}
